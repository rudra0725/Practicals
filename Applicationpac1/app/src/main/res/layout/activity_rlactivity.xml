<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_css"
    tools:context=".RLActivity">

    <TextView
        android:id="@+id/tvcenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/cardview_dark_background"
        android:text="Center"
        android:textSize="25sp" />


    <Button
        android:id="@+id/btnabove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        android:layout_above="@id/tvcenter"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btnbelow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="button"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tvcenter"/>

    <Button
        android:id="@+id/btnleft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="button"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/tvcenter"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="button"
        android:layout_toRightOf="@id/tvcenter"
        android:layout_centerVertical="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="text bottom"
        android:id="@+id/tvbottom"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"/>
<!--    <TextView-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="Center Vertically"-->
<!--        android:textSize="30sp"-->
<!--        android:background="@color/teal_200"-->
<!--        android:layout_centerVertical="true"/>-->
<!--    -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Center Horizontal.!"
        android:textSize="30sp"
        android:background="@color/teal_700"
        android:layout_centerHorizontal="true"
        />


</RelativeLayout>